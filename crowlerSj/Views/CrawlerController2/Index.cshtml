
@{
    ViewData["Title"] = "Index";
}
@model List<SearchResult>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Web Crawler Results</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Web Crawler Results</h1>
        <div class="row mt-3">
            @foreach (var result in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@result.Title</h5>
                            <p class="card-text">@result.Snippet</p>
                            <p class="card-text"><strong>Phone:</strong> @result.Phone</p>
                            <p class="card-text"><strong>Address:</strong> @result.Address</p>
                            <p class="card-text"><strong>Category:</strong> @result.Category</p>
                            <a href="@result.Link" class="btn btn-primary" target="_blank">Visit Link</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
