@model List<Crowl>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h4>لیست تاریخ‌ها</h4>
            <ul class="list-group">
                @foreach (var d in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @d.InsertTime.ToString("yyyy/MM/dd HH:mm")
                        <span> @d.Title</span>
                        <form method="post" asp-controller="Home" asp-action="Start" style="display:inline;">
                            <input type="hidden" value="@d.Title" name="search" />
                            <input type="hidden" value="@d.Id" name="crowlId" />
                            <button type="submit" class="btn btn-success btn-sm">▶ ادامه</button>
                        </form>
                        <a href="~/home/reports?crowlId=@d.Id" class="btn btn-primary btn-sm">مشاهده</a>
                        <a href="~/home/delete?crowlId=@d.Id" class="btn btn-danger btn-sm">حذف</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>